@model TaskList.Models.ToDo

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Add">
    <div class="form-horizontal">
        <h4>ToDo</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Deadline" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsCompleted" />
                    <label asp-for="IsCompleted"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Priority" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Priority" class="form-control">
                    <option>Low</option>
                    <option>High</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
